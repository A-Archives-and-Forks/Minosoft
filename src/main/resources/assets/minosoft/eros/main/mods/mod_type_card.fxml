<?import de.bixilon.minosoft.util.PixelImageView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<HBox xmlns:fx="http://javafx.com/fxml/1" fx:id="root" prefHeight="80.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/18" fx:controller="de.bixilon.minosoft.gui.eros.main.mods.ModCardController">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="ALWAYS"/>
        </rowConstraints>
        <GridPane GridPane.columnIndex="1">
            <TextFlow fx:id="nameFX" style="-fx-font-weight: bold; -fx-font-size: 20;">
                <GridPane.margin>
                    <Insets bottom="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
                <Text text="Name"/>
            </TextFlow>
            <TextFlow fx:id="descriptionFX" GridPane.rowIndex="1">
                <GridPane.margin>
                    <Insets bottom="5.0" right="5.0"/>
                </GridPane.margin>
                <Text text="Text 1"/>
            </TextFlow>
            <columnConstraints>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>
        </GridPane>
        <PixelImageView fx:id="imageFX" height="100" width="100">
            <GridPane.margin>
                <Insets left="5.0" right="15.0"/>
            </GridPane.margin>
        </PixelImageView>
    </GridPane>
</HBox>
